block content
    a(href="/") Home
    
    form(id='regworld' action='/world/regworld' method='post')
        table
            tr
                td Country
                td
                    input(type='text' name='name' required)
            tr
                td Country code
                td
                    input(type='text' name='countrycode' required)
            tr
                td Continent
                td
                    input(type='text' name='continent' required)

            tr
                td Population
                td
                    input(type='number' name='population' required)
            tr
                td
                td
                    input(type='submit' value='Submit')